---
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";

---

<section>
    <Container className="space-y-8">
        <div class="text-center max-w-3xl mx-auto">
            <Title>
                Trusted with tools you know
            </Title>
        </div>
        <div class="flex justify-center flex-wrap gap-4">
            <div class="p-4 sm:p-5 rounded-xl bg-body border border-box-border group">
                <img src="/logos/nodedotjs-color.svg" width="100" height="60" alt="Node.js" class="tech-logo h-7 sm:h-10 w-auto ease-linear duration-300">
            </div>
            <div class="p-4 sm:p-5 rounded-xl bg-body border border-box-border group">
                <img src="/logos/react-color.svg" width="100" height="60" alt="React" class="tech-logo h-7 sm:h-10 w-auto ease-linear duration-300">
            </div>
            <div class="p-4 sm:p-5 rounded-xl bg-body border border-box-border group">
                <img src="/logos/docker-color.svg" width="100" height="60" alt="Docker" class="tech-logo h-7 sm:h-10 w-auto ease-linear duration-300">
            </div>
            <div class="p-4 sm:p-5 rounded-xl bg-body border border-box-border group">
                <img src="/logos/nodedotjs-color.svg" width="100" height="60" alt="Node.js" class="tech-logo h-7 sm:h-10 w-auto ease-linear duration-300">
            </div>
            <div class="p-4 sm:p-5 rounded-xl bg-body border border-box-border group">
                <img src="/logos/react-color.svg" width="100" height="60" alt="React" class="tech-logo h-7 sm:h-10 w-auto ease-linear duration-300">
            </div>
            <div class="p-4 sm:p-5 rounded-xl bg-body border border-box-border group">
                <img src="/logos/docker-color.svg" width="100" height="60" alt="Docker" class="tech-logo h-7 sm:h-10 w-auto ease-linear duration-300">
            </div>
            <div class="p-4 sm:p-5 rounded-xl bg-body border border-box-border group">
                <img src="/logos/nodedotjs-color.svg" width="100" height="60" alt="Node.js" class="tech-logo h-7 sm:h-10 w-auto ease-linear duration-300">
            </div>
            <div class="p-4 sm:p-5 rounded-xl bg-body border border-box-border group">
                <img src="/logos/react-color.svg" width="100" height="60" alt="React" class="tech-logo h-7 sm:h-10 w-auto ease-linear duration-300">
            </div>
            <div class="p-4 sm:p-5 rounded-xl bg-body border border-box-border group">
                <img src="/logos/docker-color.svg" width="100" height="60" alt="Docker" class="tech-logo h-7 sm:h-10 w-auto ease-linear duration-300">
            </div>
        </div>
    </Container>
</section>

<style>
    .tech-logo {
        filter: grayscale(100%) brightness(70%);
        transition: filter 0.3s ease, fill 0.3s ease;
    }

    .tech-logo:hover {
        filter: grayscale(0%) brightness(100%);
        fill: #7f11e0;
    }
</style>